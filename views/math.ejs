<section id="features order px-12 py-12" class="features">
    <div class="container">
        <div class="col-lg-12 mt-4 mt-lg-0">
            <div class="tab-content">
                <div class="tab-pane show active" id="tab-1">
                    <div class="row">
                        <div class="col-lg-12 details order-2 order-lg-1">
                            <h3>Word Information</h3>
                            <div class="row action-area py-4">
                                <div class="col-lg-6">
                                    <label>Search:</label>
                                    <input id="user_filter" class="info_text" type="text" value="" placeholder="Input filter"/>
                                    <button id="user_find">Find</button>
                                    <label>Row:</label>
                                    <select id="user_perPage">
                                        <option value="10" <%= math.pageInfo.perPage == 10 ? 'selected':'' %>>10</option>
                                        <option value="20" <%= math.pageInfo.perPage == 20 ? 'selected':'' %>>20</option>
                                        <option value="50" <%= math.pageInfo.perPage == 50 ? 'selected':'' %>>50</option>
                                    </select>
                                </div>
                                <div class="col-lg-4" id="user-pagination">
                                    <% if (Math.ceil(math.pageInfo.count / math.pageInfo.perPage) > 0) { %>
                                        <ul class="pagination text-center">
                                            <% if (math.pageInfo.curPage == 1) { %>
                                                <li class="disabled">First</li>
                                            <% } else { %>
                                                <li data-page="1">First</li>
                                            <% } %>
                                            <% var i = (Number(math.pageInfo.curPage) > 5 ? Number(math.pageInfo.curPage) - 4 : 1) %>
                                            <% if (i !== 1) { %>
                                                <li class="disabled">...</li>
                                            <% } %>
                                            <% for (; i <= (Number(math.pageInfo.curPage) + 4) && i <= Math.ceil(math.pageInfo.count / math.pageInfo.perPage); i++) { %>
                                                <% if (i == math.pageInfo.curPage) { %>
                                                    <li class="active"><%= i %></li>
                                                <% } else { %>
                                                    <li data-page="<%= i %>"><%= i %></li>
                                                <% } %>
                                                <% if (i == Number(math.pageInfo.curPage) + 4 && i < Math.ceil(math.pageInfo.count / math.pageInfo.perPage)) { %>
                                                    <li class="disabled">...</li>
                                                <% } %>
                                            <% } %>
                                            <% if (math.pageInfo.curPage == Math.ceil(math.pageInfo.count / math.pageInfo.perPage)) { %>
                                                <li class="disabled">Last</li>
                                            <% } else { %>
                                                <li data-page="<%= Math.ceil(math.pageInfo.count / math.pageInfo.perPage) %>">Last</li>
                                            <% } %>
                                        </ul>
                                    <% } %>
                                </div>
                                <div class="col-lg-2" id="count_label">
                                    <label><%= math.pageInfo.count %> of <%= math.totalNum %></label>
                                </div>
                            </div>
                            <table class="w-full table-auto bg-white full-width">
                                <thead>
                                    <tr>
                                        <th class="border py-2 word_col">Target Number</th>
                                        <th class="border py-2 text_col">Numbers</th>
                                        <th class="border py-2 text_col">Operations</th>
                                        <th class="border py-2 button_col">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="user_table">
                                    <% for (var i=0; i<math.result.length; i++) { %>
                                        <tr>
                                            <td class="border py-2 word_col text-center">
                                                <input class="info_race info_text" type="number" value="<%= math.result[i].target_num %>" placeholder="Target Number" readonly/>
                                            </td>
                                            <td class="border py-2 text_col text-center">
                                                <textarea class="num_Array info_text" value="" placeholder="Numbers" readonly><%= math.result[i].num_Array.join(',') %></textarea>
                                            </td>
                                            <td class="border py-2 text_col text-center">
                                                <textarea class="operation info_text" value="" placeholder="Operation" readonly><%= math.result[i].operation %></textarea>
                                            </td>
                                            <td class="border py-2 button_col text-center" data-word="<%= math.result[i]._id %>">
                                                <button type="button" class="Math-Update">Update</button>
                                                <button type="button" class="Math-Delete mt-2">Delete</button>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                            <div class="row action-area py-4">
                                <!-- <button class="offset-lg-3 col-lg-3" type="button" id="tips_info_clear">Clear</button> -->
                                <button class="col-lg-2 mr-2 ml-2" type="button" id="math_addBtn">Add</button>
                                <!-- <button class="col-lg-2 mr-2 ml-2" id="tips_info_save">Save</button> -->
                            </div>
                        </div>
                    </div>
                </div>
